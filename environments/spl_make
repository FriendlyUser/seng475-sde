# Reference: http://stackoverflow.com/questions/20357033/how-to-fix-program-name-usr-lib-x86-64-linux-gnu-libstdc-so-6-version-cxx

sde_gcc_version=7.1.0
sde_gcc_dir="$sde_top_dir/packages/gcc-$sde_gcc_version"
sde_clang_version=4.0.0
sde_clang_dir="$sde_top_dir/packages/clang-$sde_clang_version"
sde_cmake_version=3.8.1
sde_cmake_dir="$sde_top_dir/packages/cmake-$sde_cmake_version"
sde_jasper_version=2.0.12
sde_jasper_dir="$sde_top_dir/packages/jasper-$sde_jasper_version"
sde_texlive_dir="$sde_top_dir/packages/texlive"
sde_gdb_version=7.12.1
sde_gdb_dir="$sde_top_dir/packages/gdb-$sde_gdb_version"
sde_spl_version=2.0.5
sde_spl_dir="$sde_top_dir/packages/SPL-$sde_spl_version"
sde_ndiff_version=2.00
sde_ndiff_dir="$sde_top_dir/packages/ndiff-$sde_ndiff_version"
sde_aristotle_dir="$sde_top_dir/packages/aristotle"

sde_path_prefix="$sde_top_dir/bin:$sde_texlive_dir/2016/bin/x86_64-linux:$sde_jasper_dir/bin:$sde_gcc_dir/bin:$sde_clang_dir/bin"
sde_path_suffix="$sde_ndiff_dir/bin:$sde_aristotle_dir/bin:$sde_spl_dir/bin"

sde_dll_options="-Wl,-rpath -Wl,$sde_gcc_dir/lib64 -Wl,-rpath -Wl,$sde_spl_dir/lib64"
sde_incl_dir_options="-I$sde_spl_dir/include"
sde_lib_dir_options="-L$sde_spl_dir/lib64"

sde_gcc_cxx_program="$sde_gcc_dir/bin/g++"
sde_gcc_cxx_options_prefix=
sde_gcc_cxx_options_prefix="$sde_gcc_cxx_options_prefix -std=c++17"
# Note: -fext-numeric-literals is to workaround an apparent bug in GCC
# Reference: http://stackoverflow.com/questions/25365160/boostmultiprecisionfloat128-and-c11
sde_gcc_cxx_options_prefix="$sde_gcc_cxx_options_prefix -fext-numeric-literals"
sde_gcc_cxx_options_suffix=
sde_gcc_cxx_options_suffix="$sde_gcc_cxx_options_suffix $sde_dll_options"
sde_gcc_cxx_options_suffix="$sde_gcc_cxx_options_suffix $sde_incl_dir_options"
sde_gcc_cxx_options_suffix="$sde_gcc_cxx_options_suffix $sde_lib_dir_options"
sde_gcc_c_program="$sde_gcc_dir/bin/gcc"
sde_gcc_c_options_prefix="-std=c11"
sde_gcc_c_options_suffix="$sde_dll_options"

sde_clang_cxx_program="$sde_clang_dir/bin/clang++"
sde_clang_cxx_options_prefix=
sde_clang_cxx_options_prefix="$sde_clang_cxx_options_prefix -std=c++14"
sde_clang_cxx_options_suffix=
sde_clang_cxx_options_suffix="$sde_clang_cxx_options_suffix $sde_dll_options"
sde_clang_cxx_options_suffix="$sde_clang_cxx_options_suffix $sde_incl_dir_options"
sde_clang_cxx_options_suffix="$sde_clang_cxx_options_suffix $sde_lib_dir_options"
sde_clang_c_program="$sde_clang_dir/bin/clang"
sde_clang_c_options_prefix="-std=c11"
sde_clang_c_options_suffix="$sde_dll_options"

sde_cmake_program="$sde_cmake_dir/bin/cmake"
#sde_cmake_prefix_path="$HOME/local:$sde_spl_dir"
sde_cmake_prefix_path=

#sde_ld_library_path_prefix="$sde_gcc_dir/lib64"
sde_ld_library_path_prefix=
sde_ld_library_path_suffix=

sde_gdb_program="$sde_gdb_dir/bin/gdb"
