FROM grandfleet/seng475-sde:HLBF2019

WORKDIR /boost-install

COPY / .

RUN python3 --version && python --version

RUN chmod +x checkFolder.sh
RUN  ./checkFolder.sh /usr/local/bin/cmake &&  ./checkFolder.sh /usr/local/sde/bin/cmake
RUN cd /usr/local/sde && ls 
RUN cd /usr/local/sde/bin && echo "export PATH=\$PATH:$(pwd)" >> ~/.bashrc
RUN source ~/.bashrc 

RUN cmake --version && gcc --version

RUN clang --version

# Make new directory for installation
RUN chmod +x installer && ./installer -d /usr/local/sde -e default -f